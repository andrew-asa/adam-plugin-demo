{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@base/*": [
        "src/base/*"
      ],
      "@renderer/*": [
        "src/renderer/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/*.d.ts",
    "src/**/*.vue",
    "src/**/*.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
}
